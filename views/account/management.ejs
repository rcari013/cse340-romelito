<section id="accountManagement">

  <% 
    const firstname = locals.accountData.account_firstname;
    const accountType = locals.accountData.account_type;
    const userId = locals.accountData.account_id;
  %>

  <!-- Main heading (H1) -->
  <h1>Welcome <%= firstname %></h1>

  <!-- Secondary heading (H2) -->
  <h2>Account Management</h2>

  <!-- Flash Messages -->


  <!-- Update Account Info -->
  <p>
    <a href="/account/update/<%= userId %>">Update Account Information</a>
  </p>

  <!-- NEW: Client appointment management -->
<!-- Appointment Links -->
<% if (accountType === "Client") { %>
  <p><a href="/appointment/my-appointments">My Test Drive Appointments</a></p>
<% } %>

<% if (accountType === "Employee") { %>
  <p><a href="/appointment/employee">View Test Drive Appointments</a></p>
<% } %>

<% if (accountType === "Admin") { %>
  <p><a href="/appointment/employee">View, Edit Test Drive Appointments</a></p>
<% } %>


  <!-- Inventory Management (Employee/Admin only) -->
  <% if (accountType === "Employee" || accountType === "Admin") { %>
      <h3>Inventory Management</h3>
      <p><a href="/inv/">Manage Inventory</a></p>
  <% } %>

</section>

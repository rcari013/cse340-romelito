<h1>Delete <%= inv_make %> <%= inv_model %></h1>

<p class="notice">Confirm Deletion - This action is permanent.</p>

<!-- Flash message -->
<% if (message && message.length > 0) { %>
  <div class="notice"><%= message %></div>
<% } %>

<!-- Validation errors -->
<% if (errors && errors.length > 0) { %>
  <ul class="notice">
    <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<form action="/inv/delete" method="post">

  <!-- Hidden ID -->
  <input type="hidden" name="inv_id" value="<%= inv_id %>">

  <label>Make</label>
  <input type="text" readonly value="<%= inv_make %>">

  <label>Model</label>
  <input type="text" readonly value="<%= inv_model %>">

  <label>Year</label>
  <input type="text" readonly value="<%= inv_year %>">

  <label>Price</label>
  <input type="text" readonly value="<%= inv_price %>">

  <button type="submit" class="delete-btn">Delete Vehicle</button>

</form>
